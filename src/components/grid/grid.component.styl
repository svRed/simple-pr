.grid {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;

    &__cell {
        &_3 {
            width: 33.33%;
            padding: 0 16px;
        }
        &_2 {
            width: 50%;
            padding: 0 16px;
        }
        &_4 {
            width: 25%;
        }
    }
}

@media (max-width: 880 px) {
    .grid {
        flex-direction: column;

        &__cell {
            &_2,
            &_3,
            &_4 {
                width: 100%;
            }
        }
    }
}