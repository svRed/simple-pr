@import "../../styles/const.styl";

.overlay {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 10;

    &__close {
        width: 16px;
        height: 16px;
        color: $white;
        font-size: 16px;
        position: absolute;
        top: 16px;
        right: 16px;
        font-family: 'FontAwesome';

        &:before {
            content: '\e906';

        }

        &:hover {
            &:before {
                content: '\e905';
            }
        }
    }

    &__content {
        max-width: 80%;
        max-height: 100%;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }
}